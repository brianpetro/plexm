<%= simple_form_for([@bounty, @discussion]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :discussion %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :bounty_id, value: @bounty.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
