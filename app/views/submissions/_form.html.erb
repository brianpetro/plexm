<%= simple_form_for([@bounty, @submission]) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.collection_select :upload_id, @uploads, :id, :title %>
    <%= f.hidden_field :bounty_id, value: @bounty.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
