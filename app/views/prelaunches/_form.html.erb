<%= simple_form_for(@prelaunch) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <p>
			<span class="lead"><%= f.submit "Get in line", class: 'btn btn-large btn-danger' %>  100<%= @prelaunches.count %> currently in line.</span>
		</p>
  </div>
<% end %>
