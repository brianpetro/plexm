<%= simple_form_for([@user, @upload]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.input :title %>
		<%= f.input :artist %>
    <%= f.file_field :upload %>
  </div>
	<div>
		<h4>Clicking submit LEGALLY binds you and the file transferred to our storage facility.</h4>
    <%= f.input :agreement, label: 'Check this box to agree to our terms.' %>
	</div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
