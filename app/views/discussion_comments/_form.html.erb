<%= simple_form_for([@bounty, @discussion_comment]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :comment %>
    <%= f.hidden_field :bounty_id, value: params[:bounty_id] %>
    <%= f.hidden_field :discussion_id, value: params[:discussion_id] %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
